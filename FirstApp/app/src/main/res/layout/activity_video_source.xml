<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoSource">


    <LinearLayout

        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="414dp"
            android:layout_height="68dp"
            android:theme="@style/Theme.FirstApp.AppBarOverlay"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="-5dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/Theme.FirstApp.PopupOverlay" />

            <TextView
                android:id="@+id/textviewQuestionare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="11dp"
                android:layout_marginStart="10dp"
                android:text="Add Video"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </com.google.android.material.appbar.AppBarLayout>
        <EditText
            android:hint="Please enter the question block number :"
            android:id="@+id/quesEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </EditText>
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:text="Record"
            app:layout_constraintTop_toTopOf="@+id/linearLayout1"
            tools:layout_editor_absoluteX="113dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select from the gallery"
            app:layout_constraintStart_toEndOf="@+id/button1"
            tools:layout_editor_absoluteY="56dp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>